{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "jsx": "react-jsx", // ✅ Important for React 18+
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true, // ✅ Fix ts-jest import warnings
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
